<section id="skills" class="content-section flex items-center justify-center">
    <div class="max-w-4xl w-full">
        <!-- Espacio para Imagen de Skills -->
        <div
            class="mb-8 w-full h-40 bg-gradient-to-br from-ai-dark-bg to-ai-light-bg rounded-lg shadow-xl flex items-center justify-center text-gray-500 text-lg border border-white border-opacity-10"
        >
            [Espacio para Imagen: Iconos de Tecnología (Cloud, AI, Python)]
        </div>

        <h3
            class="text-3xl font-bold mb-6 text-white border-b-2 border-secondary-ai-purple pb-2"
        >
            Habilidades & Certificaciones
        </h3>

        <div class="grid md:grid-cols-2 gap-8">
            <!-- Habilidades Técnicas -->
            <div>
                <h4 class="text-2xl font-semibold text-primary-ai-blue mb-4">
                    Stack Tecnológico
                </h4>
                <div class="flex flex-wrap gap-2">
                    <span class="skill-tag">Linux</span>
                    <span class="skill-tag">Next.js</span>
                    <span class="skill-tag">Astro</span>
                    <span class="skill-tag">Vue</span>
                    <span class="skill-tag">Vite</span>
                    <span class="skill-tag">Dialogflow CX/ES</span>
                    <span class="skill-tag">AI Automation</span>
                    <span class="skill-tag">Python</span>
                    <span class="skill-tag">REST APIs</span>
                    <span class="skill-tag">Google Cloud Functions</span>
                    <span class="skill-tag">Twilio</span>
                    <span class="skill-tag">n8n</span>
                    <span class="skill-tag">Proxmox VE</span>
                    <span class="skill-tag">CasaOS</span>
                    <span class="skill-tag">Home Assistant</span>
                    <span class="skill-tag">Plex</span>
                    <span class="skill-tag">Sonarr</span>
                    <span class="skill-tag">Radarr</span>
                    <span class="skill-tag">Overseerr</span>
                    <span class="skill-tag">Prowlarr</span>
                    <span class="skill-tag">Omada Controller</span>
                    <span class="skill-tag">Open WebUI</span>
                    <span class="skill-tag">NVR</span>
                    <span class="skill-tag">Prometheus</span>
                    <span class="skill-tag">Docker</span>
                    <span class="skill-tag"
                        >VDI Testing (Windows 11 Citrix)</span
                    >
                    <span class="skill-tag">SQL / VBA / Advanced Excel</span>
                </div>
            </div>

            <!-- Certificaciones y Habilidades Blandas -->
            <div class="space-y-6">
                <div>
                    <h4
                        class="text-2xl font-semibold text-primary-ai-blue mb-4"
                    >
                        Certificaciones
                    </h4>
                    <ul class="list-disc list-inside text-text-light space-y-2">
                        <li>**Google Professional Workspace Administrator**</li>
                        <li>
                            Microsoft 365 Platforms and Apps (Azure
                            Fundamentals)
                        </li>
                        <li>
                            PCI DSS: Securing Data, Systems, and Applications
                        </li>
                        <li>Six Sigma White Belt</li>
                        <li>DEX Certification (Capgemini)</li>
                    </ul>
                </div>

                <div>
                    <h4
                        class="text-2xl font-semibold text-primary-ai-blue mb-4"
                    >
                        Habilidades Blandas
                    </h4>
                    <div class="flex flex-wrap gap-2">
                        <span class="soft-skill-tag">Pensamiento Analítico</span
                        >
                        <span class="soft-skill-tag"
                            >Resolución Creativa de Problemas</span
                        >
                        <span class="soft-skill-tag"
                            >Optimización de Procesos</span
                        >
                        <span class="soft-skill-tag">Adaptabilidad</span>
                        <span class="soft-skill-tag"
                            >Innovación Dirigida por Investigación</span
                        >
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    /* Estilos para los tags de habilidades */
    .skill-tag,
    .soft-skill-tag {
        display: inline-block;
        padding: 0.3rem 0.75rem;
        border-radius: 9999px;
        font-size: 0.875rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        transition: all 0.2s ease;
        background-color: rgba(var(--ai-accent-cyan), 0.1);
        border: 1px solid rgba(var(--ai-accent-cyan), 0.4);
        color: var(--ai-accent-cyan);
        box-shadow: inset 0 0 0 1px rgba(var(--ai-accent-cyan), 0.2);
    }
    .skill-tag:hover,
    .soft-skill-tag:hover {
        transform: translateY(-1px);
        box-shadow:
            inset 0 0 0 1px rgba(var(--primary-ai-blue), 0.6),
            0 2px 5px rgba(0, 0, 0, 0.3);
        background-color: rgba(var(--primary-ai-blue), 0.15);
        color: var(--primary-ai-blue);
        border-color: rgba(var(--primary-ai-blue), 0.6);
    }
    .soft-skill-tag {
        /* Override specific colors for soft skills if needed, using variables */
    }
</style>
